<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:padding="@dimen/content_margin" >

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="5.0dip"
        android:hint="用户名"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:background="@drawable/text_field_without_top_border"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:background="@drawable/text_field_without_top_border"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />
   <EditText
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="5.0dip"
        android:hint="桌台号"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:background="@drawable/text_field_without_top_border"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />
     <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="5.0dip"
        android:hint="电话"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:background="@drawable/text_field_without_top_border"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />
     
       <EditText
        android:id="@+id/realname"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="5.0dip"
        android:hint="真实姓名"
        android:singleLine="true"
        android:textColor="#ff555555"
        android:background="@drawable/text_field_without_top_border"
        android:textColorHint="#ff888888"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/reg_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/selector_green_corners_button"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="@dimen/submit_text_size" />

</LinearLayout>